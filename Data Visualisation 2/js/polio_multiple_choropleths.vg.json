{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "",
    "repeat": ["1960", "1980", "1990", "2000", "2005", "2020"],
    "columns": 2,

    "spec": {
        "projection": {"type": "equalEarth", "rotate": [-15, 0, 0]},
        "width": 400,
        "height": 300,

        "layer": [
            {
                "data": {
                    "url": "https://raw.githubusercontent.com/ethan-lee-07/FIT3179/main/Week_10_Homework/js/ne_110m.json",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "transform": [
                    {
                        "calculate": "'Data is not available in ' + datum.properties.NAME",
                        "as": "note"
                    }
                ],
                "mark": {
                    "type": "geoshape",
                    "fill": "lightgrey",
                    "stroke": "grey",
                    "strokeWidth": 0.5
                },
                "encoding": {"tooltip": {"field": "note"}}
            },

            {
                "data": {
                "url": "../data/Disease/Polio/polio_status_wide_processed.csv"
                },
                "params": [
                    {
                        "name": "hover",
                        "select": {"type": "point", "on": "mouseover", "clear": "mouseout", "resolve": "global"},
                        "value": false
                    }
                ],
                "transform": [
                    {
                        "lookup": "iso3",
                        "from": {
                            "data": {
                      "url": "https://raw.githubusercontent.com/ethan-lee-07/FIT3179/main/Week_10_Homework/js/ne_110m.json",
                      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                    },
                    "key": "properties.ISO_A3"
                  },
                  "as": "geo"
                    }
                ],
                "mark": {
                    "type": "geoshape",
                    "stroke": "grey",
                    "strokeWidth": 0.6
                },
                "encoding": {
                    "shape": {"field": "geo", "type": "geojson"},
                    "color": {
                        "field": {"repeat": "repeat"},
                        "type": "nominal",
                        "scale": {"domain": ["endemic", "polio-free (not certified)", "WHO Region certified polio-free"], "range": ["#f03b20", "#fad241", "#c6e5ef"]},
                        "legend": {
                            "title": null                            
                        }
                    },
                    "tooltip": [
                        {"field": "country", "type": "nominal", "title": "Country"},
                        {"field": {"repeat": "repeat"}, "type": "nominal", "title": "Status"}
                    ],
                    "strokeWidth": {"condition": [{"param": "hover","value": 0.6}],"value": 0.1}
                }
            },
            {
                "data": {
                    "values": [
                        {
                            "1960": "Year: 1960",
                            "1980": "Year: 1980",
                            "1990": "Year: 1990",
                            "2000": "Year: 2000",
                            "2005": "Year: 2005",
                            "2020": "Year: 2020"
                        }
                    ]
                },
                "mark": {
                    "type": "text",
                    "align": "left",
                    "baseline": "bottom",
                    "x": 175,
                    "y": 25
                },
                "encoding": {"text": {"field": {"repeat": "repeat"}}}
            }            
        ]

    }



}